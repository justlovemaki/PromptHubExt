{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "1.0.2",
  "default_locale": "en",
  "permissions": [
    "storage",
    "contextMenus",
    "sidePanel",
    "commands",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "__MSG_appName__",
    "default_icon": "icons/logo_128x128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "toggle-side-panel": {
      "suggested_key": {
        "default": "Alt+O"
      },
      "description": "__MSG_toggleSidePanelDesc__"
    },
    "quick-save-selection": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "__MSG_quickSaveSelectionDesc__"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/logo_16x16.png",
    "48": "icons/logo_48x48.png",
    "64": "icons/logo_64x64.png",
    "128": "icons/logo_128x128.png"
  }
}
